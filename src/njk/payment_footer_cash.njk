<div id="main-content-footer-container">
  <div id="cash-payment-footer-left">
    <div id="back-btn">
      <button type="button" name="back-button" onclick="navigateBackToPaymentPage()">BACK</button>
    </div>
  </div>

  <div id="cash-payment-footer-right">
    <div id="cash-container-btn">
      <button id="cash-pay-button" type="button" name="cash-pay-button" onclick="location.href='/payment-pages/{{OrderID}}?page=cash'">Betal</button>
    </div>

    <script>
      //source: https://www.w3schools.com/howto/tryit.asp?filename=tryhow_css_modal

      <!-- The Modal -->


      // Get the modal
      var modal = document.getElementById('myModal');

      // Get the button that opens the modal
      var btn = document.getElementById("cash-pay-button");

      // Get the <span> element that closes the modal
      var span = document.getElementsByClassName("close")[0];

      // When the user clicks the button, open the modal
      btn.onclick = function() {
        modal.style.display = "block";
      }

      // When the user clicks on <span> (x), close the modal
      span.onclick = function() {
        modal.style.display = "none";
      }

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
    </script>

